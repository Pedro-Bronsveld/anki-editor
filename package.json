{
  "name": "anki-editor",
  "displayName": "anki-editor",
  "description": "Edit HTML and CSS of Anki card templates in Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:anki-editor.helloWorld",
    "anki-editor.workspaceInit",
    "onFileSystem:ankieditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anki-editor.helloWorld",
        "title": "Hello World",
        "category": "Anki Editor"
      },
      {
				"command": "anki-editor.openAsFolder",
				"title": "Open as folder",
				"category": "Anki Editor",
        "icon": "$(root-folder-opened)"
			},
      {
        "command": "anki-editor.refreshNoteTypesTree",
        "title": "Refresh Note Types",
        "category": "Anki Editor",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "anki-editor",
          "title": "Anki Editor",
          "icon": "resources/pages.svg"
        }
      ]
    },
    "views": {
      "anki-editor": [
        {
          "id": "note-types-tree",
          "name": "Note Types"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "anki-editor.refreshNoteTypesTree",
          "when": "view == note-types-tree",
          "group": "navigation"
        },
        {
          "command": "anki-editor.openAsFolder",
          "when": "view == note-types-tree",
          "group": "navigation"
        }
      ]
    },
    "languages": [{
      "id": "anki",
      "aliases": ["AnkiTemplate", "anki"],
      "extensions": [".anki.html"],
      "configuration": "./languages/language-configuration.json"
    }],
    "grammars": [
      {
        "language": "anki",
        "scopeName": "text.html.anki",
        "path": "./languages/syntaxes/anki.tmLanguage.json",
        "embeddedLanguages": {
          "text.html": "html",
          "source.anki": "anki",
          "source.js": "javascript",
          "source.css": "css",
          "support.constant.handlebars": "handlebars"
        }
      },
      {
        "path": "./languages/syntaxes/anki-template.injection.json",
        "scopeName": "source.anki",
        "injectTo": ["text.html.anki"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.16.12",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@autoanki/anki-connect": "^0.1.1"
  }
}
