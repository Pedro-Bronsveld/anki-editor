{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"injectionSelector": "L:text.html.anki",
	"name": "Anki - Injected Template",
	"scopeName": "source.anki",
	"patterns": [
		{
			"include": "#anki-template"
		}
	],
	"repository": {
		"anki-template": {
			"begin": "{{",
			"end": "}}",
			"beginCaptures": {
				"0": { "name": "support.constant.handlebars.anki" }
			},
			"endCaptures": {
				"0": { "name": "support.constant.handlebars.anki" }
			},
			"patterns": [
				{ "include": "#anki-template-invalid-characters" },
				{ "include": "#anki-conditional-block" },
				{ "include": "#anki-template-segment-list" }
			],
			"name": "source.anki.template"
		},
		"anki-template-invalid-characters": {
			"match": "[\"{}]",
			"name": "invalid.illegal.anki.template"
		},
		"anki-template-oneline": {
			"name": "support.constant.handlebars.anki",
			"begin": "{{",
			"end": "}}",
			"contentName": "source.anki.template",
			"patterns": [
				{
					"name": "invalid.illegal.anki.conditional",
					"match": "(?<=(:|#|\/|\\^)\\s*)(#|\/|\\^)|(#|\/|\\^)(?=.*(:|(FrontSide)(?=\\s*}})))"
				},
				{
					"name": "keyword.control.anki.if",
					"match": "#|/|\\^"
				},
				{
					"name": "source.anki.template.function",
					"match": "([^:{}\"#]+)(?=:)",
					"captures": {
						"0": {
							"patterns": [
								{
									"name": "support.function.anki.builtin",
									"match": "tts(-voices)?|cloze|hint|text|furigana|kana|kanji|type"
								},
								{
									"name": "support.function.anki.template",
									"match": "(?<=:|{{\\s*)[a-zA-Z-]+(?=:)"
								},
								{
									"name": "string.other.anki.tts.language",
									"match": "(?<=tts )[a-z]{2}_[A-Z]{2}"
								},
								{
									"match": "(?<=tts [a-zA-Z_]+.*)(voices)(=)([^\\s{}:]+)?",
									"captures": {
										"1": { "name": "variable.parameter.anki.tts.voices" },
										"2": { "name": "keyword.operator.assignment.anki" },
										"3": {
											"patterns": [
												{
													"name": "punctuation.separator.comma",
													"match": ","
												},
												{
													"name": "string.other.anki.tts.voice",
													"match": "[^\\s{}:,]+"
												}
											]
										}
									}
								},
								{
									"match": "(?<=tts [a-zA-Z_]+.*)(speed)(=)(\\d+\\.?\\d*)?",
									"captures": {
										"1": { "name": "variable.parameter.anki.tts.speed" },
										"2": { "name": "keyword.operator.assignment.anki" },
										"3": { "name": "constant.numeric" }
									}
								}
							]
						}
					}
				},
				{
					"name": "invalid.illegal.anki.field",
					"match": "(?<=:)\\s+.*(?=}})"
				},
				{
					"include": "#anki-special-field"
				},
				{
					"include": "#anki-field"
				}
			]
		},
		"anki-conditional-block": {
			"begin": "[#^/]",
			"end": "(?=}})",
			"beginCaptures": {
				"0": {
					"name": "keyword.control.anki.conditional.start"
				}
			},
			"patterns": [
				{ 	"include": "#anki-template-invalid-characters" },
				{
					"match": ":",
					"name": "invalid.illegal.anki.template.separator"
				},
				{
					"match": "(?<=[#^/\\s])[#^/]",
					"name": "invalid.illegal.anki.conditional"
				},
				{ 	"include": "#anki-field" }
			]
		},
		"anki-template-segment-list": {
			"begin": "(?<={{)|(:(?=[\\s\n]+))|(:)",
			"beginCaptures": {
				"1": {
					"name": "invalid.illegal.anki.template.separator"
				}
			},
			"end": "(?=:|}})",
			"patterns": [
				{ "include": "#anki-template-function" },
				{ "include": "#anki-template-function-tts" },
				{ "include": "#anki-template-function-invalid-start" },
				{ "include": "#anki-template-function-invalid-end" },
				{ "include": "#anki-field" }
			]
		},
		"anki-template-recursive": {
			"begin": "",
			"end": "(?=}})",
			"patterns": [
				{
					"include": "#anki-template-segment-recursive"
				},
				{
					"match": "([^\\s:]+)(?=:)",
					"name": "support.function.anki"
				}
			]
		},
		"anki-template-segment-recursive": {
			"begin": ":",
			"end": "(?=}})",
			"patterns": [
				{
					"match": "(?<=[^:{}\\s\"]\\s+):",
					"name": "invalid.illegal.anki.template.spacing"
				},
				{
					"include": "#anki-template-segment-recursive"
				},
				{
					"begin": "(?<=:)(?:[#^\/\\s:{}\"]|$)",
					"end": "(?=:|}})",
					"name": "invalid.illegal.anki.template.spacing"
				},
				{
					"match": "(?<=:)([^:]+)(?=:)",
					"captures": {
						"0": {
							"name": "support.function.anki"
						}
					}
				},
				{
					"begin": "tts",
					"end": "(?=:|}})",
					"name": "support.type.anki"
				},
				{
					"include": "#anki-field"
				}
			]
		},
		"anki-template-basic": {
			"begin": "",
			"end": "(?=}})",
			"patterns": [
				{
					"include": "#anki-template-segment-first"
				},
				{
					"include": "#anki-template-function"
				},
				{
					"include": "#anki-template-function-tts"
				},
				{
					"include": "#anki-template-segment-last"
				}
			]
		},
		"anki-template-function": {
			"match": "(?<=(?::|(?:{{|^)\\s*))[a-z]+(?=:)",
			"name": "support.function.anki.template"
		},
		"anki-template-function-tts": {
			"begin": "tts",
			"end": "(?=:)|(?=}})",
			"name": "support.type.anki.function.tts"
		},
		"anki-template-segment-last": {
			"begin": "(?<=:)(?!.*:)",
			"end": "(?=}})",
			"patterns": [{
				"begin": "\\G(?:[#^\/\\s:{}\"]|$)",
				"end": "(?=}})",
				"name": "invalid.illegal.anki.template.segment"
			},
			{
				"include": "#anki-field"
			}]
		},
		"anki-template-function-invalid-start": {
			"begin": "(?<=:)(?:\\s|$)",
			"end": "(?=:)|(?=}})",
			"name": "invalid.illegal.anki.template.function"
		},
		"anki-template-function-invalid-end": {
			"begin": "(?<=:|^\\s*)[a-z]+\\s+",
			"end": ":|(?=}})",
			"name": "invalid.illegal.anki.template.function"
		},
		"anki-field-special": {
			"name": "variable.other.constant.anki.special-field",
			"match": "(?<=[#^\/\\s:{}\"])(Tags|Type|Deck|Subdeck|CardFlag|Card|FrontSide)($|\\s*$)"
		},
		"anki-field": {
			"name": "variable.anki.field",
			"match": "[^#^\/\\s:{}\"]+([^:{}\\s\"]|\\s(?!\\s*(}}|$)))*",
			"captures": {
				"0": { "patterns": [{ "include": "#anki-field-special" }] }
			}
		}
	}
}