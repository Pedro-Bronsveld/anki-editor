{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"injectionSelector": "L:text.html.anki",
	"name": "Anki - Injected Template",
	"scopeName": "source.anki",
	"patterns": [
		{
			"include": "#anki-template-oneline-conditional"
		},
		{
			"include": "#anki-template"
		}
	],
	"repository": {
		"anki-template": {
			"begin": "{{",
			"end": "}}",
			"beginCaptures": {
				"0": { "name": "support.constant.handlebars.anki" }
			},
			"endCaptures": {
				"0": { "name": "support.constant.handlebars.anki" }
			},
			"patterns": [
				{ "include": "#anki-template-invalid-characters" },
				{ "include": "#anki-conditional-block" },
				{ "include": "#anki-template-segment" }
			],
			"name": "source.anki.template"
		},
		"anki-template-oneline-conditional": {
			"begin": "{{(?=\\s*[#^/])",
			"end": "}}",
			"beginCaptures": {
				"0": { "name": "keyword.control.anki.conditional.begin" }
			},
			"endCaptures": {
				"0": { "name": "keyword.control.anki.conditional.end" }
			},
			"patterns": [
				{ "include": "#anki-template-invalid-characters" },
				{ "include": "#anki-conditional-block" }
			],
			"name": "meta.anki.template.oneline.conditional"
		},
		"anki-template-invalid-characters": {
			"match": "[\"{}]",
			"name": "invalid.illegal.anki.template.characters"
		},
		"anki-conditional-block": {
			"begin": "(?<=(?:^|{{)\\s*)[#^/]",
			"end": "(?=}})",
			"beginCaptures": {
				"0": {
					"name": "keyword.control.anki.conditional.start"
				}
			},
			"patterns": [
				{ 	"include": "#anki-template-invalid-characters" },
				{
					"match": ":",
					"name": "invalid.illegal.anki.template.separator"
				},
				{
					"match": "(?<=[#^/\\s])[#^/]",
					"name": "invalid.illegal.anki.conditional"
				},
				{ 	"include": "#anki-field" }
			],
			"name": "meta.anki.conditional.block"
		},
		"anki-template-segment": {
			"begin": "(?:(?<={{)|(:(?=[\\s\n]+))|(:))",
			"beginCaptures": {
				"1": {
					"name": "invalid.illegal.anki.template.separator"
				},
				"2": {
					"name": "punctuation.separator.anki.segment"
				}
			},
			"end": "(?=:|}})",
			"patterns": [
				{ "include": "#anki-template-function" },
				{ "include": "#anki-template-function-invalid-characters" },
				{ "include": "#anki-template-function-tts" },
				{ "include": "#anki-template-function-invalid-start" },
				{ "include": "#anki-template-function-invalid-end" },
				{ "include": "#anki-field" }
			],
			"name": "meta.anki.template.segment"
		},
		"anki-template-function": {
			"match": "(?<=(?::|(?:{{|^)\\s*))([^\"{}\\s:]+)(?=:)",
			"name": "meta.anki.template.function.$1",
			"captures": {
				"0": {
					"patterns": [
						{
							"match": "tts-voices|cloze(?:-only)?|hint|type|text|furigana|kana|kanji",
							"name": "support.function.anki.$1"
						}
					]
				}
			}
		},
		"anki-template-function-invalid-characters": {
			"match": "[#^/\"{}]",
			"name": "invalid.illegal.anki.template.function.characters"
		},
		"anki-template-function-tts": {
			"begin": "(?:(tts(?=\\s\\S))|(tts(?=\\s{2,}\\S)))(?!\\s*(?:$|}}))",
			"beginCaptures": {
				"1": { "name": "support.function.anki.tts" },
				"2": { "name": "invalid.illegal.anki.tts.spacing" }
			},
			"end": "(?=:)|(?=}})",
			"patterns": [
				{ "include": "#anki-template-function-invalid-characters" },
				{ "include": "#tts-spacing-invalid" },
				{ "include": "#tts-language-invalid" },
				{ "include": "#tts-language" },
				{ "include": "#tts-language-options" }
			],
			"name": "meta.anki.template.function.tts"
		},
		"tts-language": {
			"match": "((?<=tts\\s)[a-z]{1,2}(?:_[A-Z]{0,2})?)(\\S*)",
			"name": "meta.anki.function.tts.language",
			"captures": {
				"1": { "name": "string.anki.tts.language" },
				"2": { "name": "invalid.illegal.anki.tts.language.suffix" }
			}
		},
		"tts-language-invalid": {
			"match": "(?<=tts\\s)[^a-z]+",
			"name": "invalid.illegal.anki.tts.language"
		},
		"tts-spacing-invalid": {
			"match": "(?<=tts\\s{2,})[a-zA-Z_]+",
			"name": "invalid.illegal.anki.tts.spacing"
		},
		"tts-language-options": {
			"begin": "(?<=tts\\s+[a-zA-Z_]+\\s*)",
			"end": "(?=:)|(?=}})",
			"patterns": [
				{ "include": "#anki-template-function-invalid-characters" },
				{ "include": "#tts-language-option-value" }
			],
			"name": "meta.anki.tts.options"
		},
		"tts-language-option-value": {
			"match": "([a-z]+)(=)([^:\\s={}\"]*)?",
			"captures": {
				"1": { "name": "variable.parameter.anki.tts" },
				"2": { "name": "keyword.operator.assignment.anki" },
				"3": {
					"name": "meta.anki.tts.option.value",
					"patterns": [
						{ "include": "#tts-option-decimal" },
						{ "include": "#tts-option-string-list" }
					]
				}
			},
			"name": "meta.anki.tts.option"
		},
		"tts-option-string-list": {
			"patterns": [
				{
					"match": "[^\\s,]",
					"name": "string.anki.tts.option.value"
				},
				{
					"match": ",",
					"name": "punctuation.anki.tts.option.separator"
				}
			]
		},
		"tts-option-decimal": {
			"match": "(?<==)\\d\\.?\\d?(?=[:}\\s\n]|$)",
			"name": "constant.numeric.anki.tts.option.decimal"
		},
		"anki-template-function-invalid-start": {
			"begin": "(?<=:)(?:\\s|$)",
			"end": "(?=:)|(?=}})",
			"name": "invalid.illegal.anki.template.function.start"
		},
		"anki-template-function-invalid-end": {
			"begin": "(?<=:|^\\s*)[^\"{}\\s]+\\s+(?=:)",
			"end": ":|(?=}})",
			"name": "invalid.illegal.anki.template.function.end"
		},
		"anki-field-special": {
			"name": "variable.other.constant.anki.special-field",
			"match": "(?<=[#^\/\\s:{}\"])(Tags|Type|Deck|Subdeck|CardFlag|Card|FrontSide)($|\\s*$)"
		},
		"anki-field": {
			"name": "variable.anki.field",
			"match": "[^#^\/\\s:{}\"]+([^:{}\\s\"]|\\s(?!\\s*(}}|$)))*(?!.*:)",
			"captures": {
				"0": { "patterns": [{ "include": "#anki-field-special" }] }
			}
		}
	}
}